    </div>

<script>
	$(document).ready(function()
	{
        step = {{ step }}
        nb_Quest = {{ nb_quest }}
        results = JSON.parse('{{ results|raw }}')
        runlink = '{{ link }}'
        redirect = '{{ redirect }}'

        console.log(step)

        window.init = function() {
            submit_ok = false
            $("#resultat").val(''),
            $("#resultat").prop( "disabled", false );
            $("#next").addClass("btn-danger")
            $("#next").html("Remplir la case")

            if (step <= nb_Quest) setUpTimer($('.countdown'), endOftime)
        }

        window.getPostVal = function() {
            var postval = {
                'step': step,
                'resultat': $("#resultat").val()
            }
            return postval
        }

        window.updateQuestion = function(data) {
            var quest = data.questions.operation + ' = '
            $("#question").html(quest)
        }

        function endOftime() {
            $("#resultat").prop( "disabled", true );
            $("#resultat").val("-");
            $("#resultat").trigger("change");
            $("#next").trigger("click");
        }

        function setUpTimer($obj, callback)
        {
            var display = function(counter) {
                var digits = counter.toString().padStart(2, '0').split("");
                var result = ''
                $.each(digits, function(index, value) {
                    result += '<div class="digit">'+value+'</div>'
                })
                $obj.html(result);
            }

            var counter = parseInt($obj.data('start'), 10);
            display(counter)
            var interval = setInterval(function() {
                counter--;
                // Display 'counter' wherever you want to display it.
                if (counter <= 0) {
                    clearInterval(interval);
                    $obj.html('<div class="digit" style="color: red;">X</div><div class="digit" style="color: red;">X</div>');
                    callback()
                    return;
                } else {
                    display(counter)
                }
            }, 1000);
        }

        setProgress()

    })
</script>

