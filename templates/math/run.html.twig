                    <tr>
                        <td id="question" class="text-right question">{{ questions['operation'] }} = </td>
                        <td class="text-left question" style="padding: 0 0 5px 15px;"><input id="resultat" class="reponses quest_input_large" type="text" value="" size="4"/></td>
